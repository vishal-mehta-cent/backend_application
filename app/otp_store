import time

OTP_STORE = {}

def save_otp(email, otp):
    OTP_STORE[email] = {
        "otp": otp,
        "expires": time.time() + 300  # 5 minutes
    }

def verify_otp(email, otp):
    data = OTP_STORE.get(email)
    if not data:
        return False

    if time.time() > data["expires"]:
        OTP_STORE.pop(email, None)
        return False

    if data["otp"] != otp:
        return False

    OTP_STORE.pop(email, None)
    return True
